{
    "name": "acechange/ai-seo-manager",
    "description": "AI SEO Manager Pro - WordPress Plugin with Claude AI",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "AceChange",
            "email": "info@acechange.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "brain/monkey": "^2.6",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "AiSeoManager\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AiSeoManager\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "lint": "phpcs --standard=WordPress includes/ admin/ ai-seo-manager.php",
        "lint:fix": "phpcbf --standard=WordPress includes/ admin/ ai-seo-manager.php"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
